<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Modern Deep Dark Palette -->
    <Color x:Key="AppBackgroundColor">#FF08090B</Color>
    <Color x:Key="SidebarBackgroundColor">#FF0D0E12</Color>
    <Color x:Key="PanelBackgroundColor">#FF15171C</Color>
    <Color x:Key="PanelHoverBackgroundColor">#FF1C1F26</Color>
    <Color x:Key="PanelSelectedBackgroundColor">#FF22252E</Color>
    
    <Color x:Key="TextColor">#FFC0C3CE</Color>
    <Color x:Key="HeaderTextColor">#FFFFFFFF</Color>
    <Color x:Key="SubTextColor">#FF80848E</Color>
    
    <Color x:Key="BorderColor">#FF2D3139</Color>
    <Color x:Key="AccentColor">#FF0091FF</Color> <!-- Modern Blue -->
    <Color x:Key="AccentGlowColor">#330091FF</Color>
    <Color x:Key="AccentTextColor">#FFFFFFFF</Color>
    
    <Color x:Key="SuccessColor">#FF00C853</Color>
    <Color x:Key="WarningColor">#FFFFD600</Color>
    <Color x:Key="ErrorColor">#FFFF5252</Color>

    <Color x:Key="DisabledForegroundColor">#FF4D515A</Color>
    <Color x:Key="DisabledBackgroundColor">#FF101216</Color>

    <SolidColorBrush x:Key="AppBackgroundBrush" Color="{StaticResource AppBackgroundColor}"/>
    <SolidColorBrush x:Key="SidebarBackgroundBrush" Color="{StaticResource SidebarBackgroundColor}"/>
    <SolidColorBrush x:Key="PanelBackgroundBrush" Color="{StaticResource PanelBackgroundColor}"/>
    <SolidColorBrush x:Key="PanelHoverBackgroundBrush" Color="{StaticResource PanelHoverBackgroundColor}"/>
    <SolidColorBrush x:Key="PanelSelectedBackgroundBrush" Color="{StaticResource PanelSelectedBackgroundColor}"/>
    
    <SolidColorBrush x:Key="TextBrush" Color="{StaticResource TextColor}"/>
    <SolidColorBrush x:Key="HeaderTextBrush" Color="{StaticResource HeaderTextColor}"/>
    <SolidColorBrush x:Key="SubTextBrush" Color="{StaticResource SubTextColor}"/>
    
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
    <SolidColorBrush x:Key="AccentGlowBrush" Color="{StaticResource AccentGlowColor}"/>
    <SolidColorBrush x:Key="AccentTextBrush" Color="{StaticResource AccentTextColor}"/>
    
    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}"/>
    <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource WarningColor}"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource ErrorColor}"/>

    <SolidColorBrush x:Key="DisabledForegroundBrush" Color="{StaticResource DisabledForegroundColor}"/>
    <SolidColorBrush x:Key="DisabledBackgroundBrush" Color="{StaticResource DisabledBackgroundColor}"/>

    <FontFamily x:Key="AppFontFamily">./../Assets/Fonts/#Inter</FontFamily>

    <!-- Shared UI Spacing/Rounding -->
    <CornerRadius x:Key="CardCornerRadius">8</CornerRadius>
    <CornerRadius x:Key="ControlCornerRadius">4</CornerRadius>
    
    <DropShadowEffect x:Key="CardShadow" BlurRadius="15" Color="#FF000000" Opacity="0.4" ShadowDepth="4"/>
    <DropShadowEffect x:Key="AccentGlow" BlurRadius="8" Color="{StaticResource AccentColor}" Opacity="0.6" ShadowDepth="0"/>

</ResourceDictionary>
