<control:CustomWindow x:Class="Blitz_Troubleshooter_V2._3.MainWindow"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:control="clr-namespace:BTCustomControls;assembly=BTCustomControls"
        Title="Blitz Troubleshooter" Height="450" Width="450">
    <Grid Background="#09101F">

        <StackPanel Margin="100" >
            <Label Background="#E03F54" Foreground="White" Content="Choose a language" HorizontalContentAlignment="Center" Margin="0,0,0,5"  />
            <Button x:Name="btn1" Background="#E03F54" Foreground="White" Content="English" Height="27" Margin="0,0,0,5" Click="Button_Click" />
            <Button x:Name="btn2" Background="#E03F54" Foreground="White" Content="Deutsch" Height="27" Margin="0,0,0,5" Click="Button_Click_1" />
            <Button x:Name="btn3" Background="#E03F54" Foreground="White" Content="Türkçe" Height="27" Margin="0,0,0,5" Click="Button_Click_2"/>
        </StackPanel>

        <Image Source="Troubleshooter logo.png" Margin="10,10,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Height="35" />

        <Button x:Name="btn5" Content="Information" Background="Transparent" BorderBrush="Transparent" Foreground="White" Height="25" Width="75" HorizontalAlignment="Left"  VerticalAlignment="Bottom" Margin="15,0,0,15" Click="Button_Click_3"/>
    </Grid>
</control:CustomWindow>
