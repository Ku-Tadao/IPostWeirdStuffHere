<Window x:Name="W1" x:Class="Blitz_Troubleshooter.Polish"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="" Height="450" Width="450">
    <Grid Background="#09101F">
        <Image Source="Troubleshooter logo.png" Margin="10,10,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"
               Height="35" />

        <StackPanel Margin="20,60,20,0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <StackPanel>
                <Button x:Name="Btn1" Background="#E03F54" Foreground="White"
                        Content="Napraw wszystkie typowe problemy" Height="27" Margin="0,0,0,5" Click="Button_Click" />
                <Button x:Name="BtnStartDownload" Background="#E03F54" Foreground="White"
                        Content="Napraw nakładkę (TFT - LoL)" Height="27" Margin="0,0,0,5" Click="Button_Click_1" />
                <Button x:Name="Btn3" Background="#E03F54" Foreground="White" Content="Wyczyść pamięć podręczną"
                        Height="27" Margin="0,0,0,5" Click="Button_Click_2" />
                <Button x:Name="Btn4" Background="#E03F54" Foreground="White" Content="Odinstaluj Blitz" Height="27"
                        Margin="0,0,0,5" Click="Button_Click_4" />
            </StackPanel>
            <StackPanel Margin="0,50,0,0">
                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                    <TextBlock TextWrapping="Wrap" Text="Pasek postępu: " Foreground="White" />
                    <TextBlock x:Name="InputText" TextWrapping="Wrap" Text="Czekam na wejście..." Foreground="White" />
                </StackPanel>
                <ProgressBar x:Name="ProgressBar1" Height="27" />
            </StackPanel>
        </StackPanel>

        <TextBlock VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,5,5" Foreground="white"
                   Text="Wykonane z miłością przez: kubi#2468 i Huntsmango#5698" />
    </Grid>
</Window>