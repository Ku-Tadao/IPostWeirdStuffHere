<Window x:Name="W1" x:Class="Blitz_Troubleshooter.Languages.German.German"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="" Height="450" Width="450">
    <Grid Background="#09101F">
        <Image Source="../../Troubleshooter logo.png" Margin="10,10,0,0" HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Height="35" />

        <StackPanel Margin="20,60,20,0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <StackPanel>
                <Button x:Name="Btn1" Background="#E03F54" Foreground="White" Content="Alle gÃ¤ngigen Probleme beheben"
                        Height="27" Margin="0,0,0,5" Click="Btn_CommonIssues" />
                <DockPanel HorizontalAlignment="stretch" Margin="0,0,0,5">
                    <Button x:Name="Btn2" Click="Btn_FixOverlay" Background="#E03F54" HorizontalAlignment="Center"
                            Foreground="White" Content="Overlay Probleme beheben (TFT - LoL)" Height="27" Width="335" />
                    <Button x:Name="Btn3" Click="Btn_UnFixOverlay" Background="#E03F54"
                            HorizontalAlignment="Right" Foreground="White" Content="Fix entfernen" Height="27"
                            Width="68.5" />
                </DockPanel>
                <DockPanel HorizontalAlignment="stretch" Margin="0,0,0,5">
                    <Button x:Name="Btn4" Click="Btn_FixBoot" Background="#E03F54" HorizontalAlignment="Center"
                            Foreground="White" Content="Behebung, dass Blitz beim PC-Start nicht startet" Height="27"
                            Width="335" />
                    <Button x:Name="Btn5" Click="Btn_UnFixBoot" Background="#E03F54"
                            HorizontalAlignment="Right" Foreground="White" Content="Fix entfernen" Height="27"
                            Width="68.5" />
                </DockPanel>
                <Button x:Name="Btn6" Background="#E03F54" Foreground="White" Content="Cache leeren" Height="27"
                        Margin="0,0,0,5" Click="Btn_ClearCache" />
                <Button x:Name="Btn7" Background="#E03F54" Foreground="White" Content="Blitz Deinstallieren"
                        Height="27"
                        Margin="0,0,0,5" Click="Btn_UninstallBlitz" />


            </StackPanel>
            <StackPanel Margin="0,50,0,0">
                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                    <TextBlock TextWrapping="Wrap" Text="Progress Bar: " Foreground="White" />
                    <TextBlock x:Name="InputText" TextWrapping="Wrap" Text="Waiting for input..." Foreground="White" />
                </StackPanel>
                <ProgressBar x:Name="ProgressBar1" Height="27" />
            </StackPanel>
        </StackPanel>

        <TextBlock VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,5,5" Foreground="white"
                   Text="mit Liebe gemacht von Ku Tadao#8642 und Huntsmango#5698." />
        <TextBlock x:Name="Labelspeed" HorizontalAlignment="Left" Margin="375,238,0,0" TextWrapping="Wrap" Text=""
                   VerticalAlignment="Top" Foreground="Wheat" />
    </Grid>
</Window>